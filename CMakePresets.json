{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": false,
      "generator": "Ninja",
      "description": "Default build with shared library, examples, and tests enabled",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "MYTOML_BUILD_SHARED": "ON",
        "MYTOML_BUILD_EXAMPLES": "ON",
        "MYTOML_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "static",
      "hidden": false,
      "generator": "Ninja",
      "description": "Build static library with examples and tests enabled",
      "binaryDir": "${sourceDir}/build/static",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "MYTOML_BUILD_SHARED": "OFF",
        "MYTOML_BUILD_EXAMPLES": "ON",
        "MYTOML_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "dev-debug",
      "description": "Debug build for development with shared library",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "MYTOML_BUILD_SHARED": "ON",
        "MYTOML_BUILD_EXAMPLES": "ON",
        "MYTOML_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "dev-debug-static",
      "description": "Debug build for development with static library",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug/static",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "MYTOML_BUILD_SHARED": "OFF",
        "MYTOML_BUILD_EXAMPLES": "ON",
        "MYTOML_BUILD_TESTS": "ON"
      }
    }
  ],
  "testPresets": [
    {
      "name": "default-tests",
      "configurePreset": "default",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "debug-tests",
      "configurePreset": "dev-debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
